{
  "env": {
	"browser": true,
	"es6": true,
	"node": true
  },
  "extends": [
	"eslint:recommended",
	"plugin:react/recommended",
	"plugin:react-hooks/recommended"
  ],
  "globals": {
	"Atomics": "readonly",
	"SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
	"ecmaFeatures": {
	  "jsx": true
	},
	"ecmaVersion": 11,
	"sourceType": "module"
  },
  "plugins": [
	"react",
	"react-hooks"
  ],
  "rules": {
	"react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
	"react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  },
  "settings": {
	"react": {
	  "version": "detect"
	}
  }
}
